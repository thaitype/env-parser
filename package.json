{
  "name": "@thaitype/actions",
  "version": "0.0.0-canary.2",
  "description": "Type-safe Github Actions Helpers",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist/**",
    "src/**"
  ],
  "scripts": {
    "all": "run-s lint build test:coverage",
    "start": "tsx src/main.ts",
    "dev": "tsx watch src/main.ts",
    "test:coverage": "vitest run --coverage",
    "test": "vitest",
    "test:ci": "vitest run",
    "build": "rimraf ./dist && tsup src/main.ts --dts",
    "format": "prettier -w src",
    "lint": "tsc --noEmit && eslint ./src && prettier -c src",
    "lint:fix": "eslint --fix ./src && prettier -w src"
  },
  "keywords": [],
  "author": "Thada Wangthammang",
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.6",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@vitest/coverage-v8": "^1.1.3",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "dependencies": {
    "camelcase-keys": "^9.1.3",
    "dotenv": "^16.4.0",
    "js-yaml": "^4.1.0",
    "type-fest": "^4.10.1",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.3",
    "zod-validation-error": "^3.0.0"
  }
}